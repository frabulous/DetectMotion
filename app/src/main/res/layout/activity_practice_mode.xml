<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img_fency_mainmenubackground"
    tools:context="com.example.francesco.detectmotion.PracticeModeActivity">

    <ImageView
        android:id="@+id/ivCheck"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="invisible"
        app:srcCompat="@android:color/holo_green_light" />

    <TextView
        android:id="@+id/tvCommand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="93dp"
        android:fontFamily="cursive"
        android:text="tutorial command here"
        android:textAlignment="center"
        android:textColor="@color/brown_ink"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvCommand"
        android:layout_marginTop="32dp"
        android:text="tutorial check here"
        android:textAlignment="center"
        android:textColor="@color/black_overlay"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/ivPlayerState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="128dp"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp"
        app:srcCompat="@mipmap/fency_high_stand" />

    <ImageView
        android:id="@+id/ivOpponentState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivPlayerState"
        android:layout_toEndOf="@+id/ivPlayerState"
        android:layout_toRightOf="@+id/ivPlayerState"
        android:scaleX="-1"
        app:srcCompat="@mipmap/fency_low_stand" />

</RelativeLayout>
